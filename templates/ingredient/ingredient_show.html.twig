{% extends 'base.html.twig' %}

{% block title %}Liste des ingrédients
{% endblock %}

{% block body %}
	<div class="container mx-auto px-6 py-10">
		<h1 class="text-2xl font-bold text-orange-600 mb-6">Liste des ingrédients</h1>

		{% if ingredients|length > 0 %}
			<div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 gap-6">
				{% for ingredient in ingredients %}
					<div
						class="bg-white shadow rounded-lg overflow-hidden">
						<!-- Photo de l'ingrédient -->
						{% if ingredient.photo %}
							<img src="{{ asset('uploads/ingredients/' ~ ingredient.photo) }}" alt="{{ ingredient.nom }}" class="w-full h-40 object-cover">
						{% else %}
							<div class="w-full h-40 bg-gray-200 flex items-center justify-center text-gray-500">
								Pas d'image
							</div>
						{% endif %}

						<!-- Contenu de l'ingrédient -->
						<div class="p-4">
							<h2 class="text-lg font-semibold text-gray-800">{{ ingredient.nom }}</h2>
							{# <p class="text-sm text-gray-600 mt-2">{{ ingredient.description }}</p> #}
						{# <p class="text-sm text-gray-600 mt-2"> #}
							{# Quantité : #}
							{# <span class="text-orange-600">{{ ingredient.quantite }} #}
							{# {{ ingredient.unite }} #}
							{# </p> #}
						</span>
					</p>

					<!-- Bouton pour voir les détails -->
					<div class="mt-4">
						<a href="{{ path('app_ingredient_show', { id: ingredient.id }) }}" class="text-orange-600 hover:underline">
							Voir plus
						</a>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
{% else %}
	<p class="text-gray-500">Aucun ingrédient disponible pour le moment.</p>
{% endif %}</div>{% endblock %}
