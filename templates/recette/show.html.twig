{% extends 'base.html.twig' %}

{% block title %}Recette - {{ recette.nom }}{% endblock %}

{% block body %}
<div class="container mx-auto px-6 py-10">
    <!-- Card principale -->
    <div class="max-w-4xl mx-auto bg-white shadow-lg rounded-lg overflow-hidden">
        <div class="p-6">
            <!-- Titre de la recette -->
            <h1 class="text-3xl font-extrabold text-gray-800 mb-6">{{ recette.nom }}</h1>

            <!-- Contenu de la recette (texte, durée, nombre de personnes) -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-10 mb-6">
                <div class="flex flex-col space-y-4">
                    <p class="text-lg text-gray-700">{{ recette.texte }}</p>
                    <div class="flex items-center space-x-4">
                        <p class="text-gray-600 font-medium">Durée :</p>
                        <span class="text-orange-600 font-semibold">{{ recette.dureeTotale }} minutes</span>
                    </div>
                    <div class="flex items-center space-x-4">
                        <p class="text-gray-600 font-medium">Pour :</p>
                        <span class="text-orange-600 font-semibold">{{ recette.nombrePersonnes }} personne(s)</span>
                    </div>
                </div>

                <!-- Photo de la recette (si disponible) -->
                {% if recette.photo %}
                    <div class="w-full max-w-sm mx-auto">
                        <img src="{{ asset('uploads/recettes/' ~ recette.photo) }}" alt="{{ recette.nom }}" class="w-full h-auto rounded-lg shadow-lg">
                    </div>
                {% endif %}
            </div>

            <!-- Informations sur le créateur -->
            <div class="mt-6 mb-10">
                <p class="text-lg text-gray-600 font-medium">Créateur :</p>
                <p class="text-gray-800">{{ recette.utilisateur.username }}</p>
            </div>

            <!-- Affichage des ingrédients (si nécessaire) -->
            <div class="mt-10">
                <h2 class="text-2xl font-semibold text-gray-800 mb-4">Ingrédients :</h2>
                <ul class="space-y-2">
                    {# Ajoutez une boucle pour lister les ingrédients ici #}
                    {# Exemple : #}
                    {# {% for ingredient in recette.ingredients %} #}
                    {# <li class="text-gray-800">{{ ingredient.nom }}</li> #}
                    {# {% endfor %} #}
                </ul>
            </div>

            <!-- Bouton de retour à l'accueil -->
            <div class="mt-6">
                <a href="{{ path('app_home') }}" class="btn bg-orange-600 text-white px-6 py-3 rounded-md hover:bg-orange-500 transition">
                    Retour à l'accueil
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}