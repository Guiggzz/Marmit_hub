{% extends 'base.html.twig' %}

{% block title %}Recherche de recettes
{% endblock %}

{% block body %}
	<div class="container mx-auto px-6 py-10">
		<h1 class="text-4xl font-extrabold text-orange-600 mb-8 text-center">Trouver votre recette parfaite</h1>

		{# Formulaire de recherche #}
		<div class="mb-12">
			<h2 class="text-2xl font-semibold text-gray-700 mb-4">Recherchez par ingrédients</h2>
			<div class="bg-white shadow-lg rounded-lg p-6">
				{{ form_start(form) }}
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
					{{ form_widget(form) }}
				</div>
				<button type="submit" class="mt-6 w-full bg-orange-600 text-white text-lg font-semibold py-3 rounded-lg shadow-md hover:bg-orange-500 transition">
					Rechercher
				</button>
				{{ form_end(form) }}
			</div>
		</div>

		{# Affichage des recettes #}
		{% if recettes is not empty %}
			<div class="mt-12">
				<h2 class="text-3xl font-bold text-gray-800 mb-6 text-center">Résultats de votre recherche</h2>
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
					{% for recette in recettes %}
						<div class="bg-white shadow-lg rounded-lg overflow-hidden">
							<div class="p-6">
								<h3 class="text-2xl font-bold text-gray-800 mb-2">{{ recette.nom }}</h3>
								<p class="text-sm text-gray-600 mb-4">
									Pourcentage d'ingrédients disponibles :
									<span class="font-semibold text-orange-600">{{ pourcentage[recette.id]|round(2) }}%</span>
								</p>
								<a href="{{ path('recette_show', {id: recette.id}) }}" class="block text-center bg-orange-600 text-white py-2 px-4 rounded-lg hover:bg-orange-500 transition">
									Voir la recette
								</a>
							</div>
						</div>
					{% endfor %}
				</div>
			</div>
		{% else %}
			<div class="mt-12 text-center">
				<p class="text-xl text-gray-500 font-medium">Aucune recette ne correspond à vos critères.</p>
			</div>
		{% endif %}
	</div>
{% endblock %}
